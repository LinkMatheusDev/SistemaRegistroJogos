<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistemaregistrojogos.view.JogoFormController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER" styleClass="header">
         <children>
            <Label fx:id="lblTitulo" styleClass="title" text="Novo Jogo">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>

      <!-- Formulário -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <GridPane hgap="10.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <!-- Nome -->
               <Label styleClass="field-label" text="Nome *:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <TextField fx:id="txtNome" promptText="Digite o nome do jogo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               
               <!-- Preço -->
               <Label styleClass="field-label" text="Preço *:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <children>
                     <Label text="R$" />
                     <TextField fx:id="txtPreco" maxWidth="150.0" promptText="0,00" />
                  </children>
               </HBox>
               
               <!-- Gênero -->
               <Label styleClass="field-label" text="Gênero:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <ComboBox fx:id="cmbGenero" editable="true" maxWidth="200.0" promptText="Selecione ou digite" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               
               <!-- Desenvolvedora -->
               <Label styleClass="field-label" text="Desenvolvedora:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <TextField fx:id="txtDesenvolvedora" promptText="Nome da desenvolvedora" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               
               <!-- Plataforma -->
               <Label styleClass="field-label" text="Plataforma:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
               <ComboBox fx:id="cmbPlataforma" editable="true" maxWidth="200.0" promptText="Selecione ou digite" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               
               <!-- Ano de Lançamento -->
               <Label styleClass="field-label" text="Ano de Lançamento:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
               <Spinner fx:id="spnAno" maxWidth="120.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               
               <!-- Classificação -->
               <Label styleClass="field-label" text="Classificação:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
               <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
                  <children>
                     <Slider fx:id="sldClassificacao" blockIncrement="0.1" majorTickUnit="2.0" max="10.0" maxWidth="200.0" minorTickCount="9" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
                     <Label fx:id="lblClassificacao" minWidth="30.0" text="0.0" />
                  </children>
               </HBox>
               
               <!-- Descrição -->
               <Label styleClass="field-label" text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
               <TextArea fx:id="txtDescricao" maxHeight="100.0" prefRowCount="4" promptText="Descrição do jogo (opcional)" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>

      <!-- Observações -->
      <VBox>
         <children>
            <Separator />
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label styleClass="field-info" text="* Campos obrigatórios">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>

      <!-- Botões -->
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="button-bar">
         <children>
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleCancelar" styleClass="btn-secondary" text="Cancelar" />
            <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#handleSalvar" styleClass="btn-primary" text="Salvar" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
   </children>
</VBox> 